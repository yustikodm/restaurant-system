# Server Configuration
# Port for the menu service API
PORT=3001
# Host address for the service
HOST=0.0.0.0

# MongoDB Configuration
# URI for connecting to MongoDB instance
# Format: mongodb://[username:password@]host[:port]/database
MONGODB_URI=mongodb://localhost:27017/restaurant

# RabbitMQ Configuration
# URL for connecting to RabbitMQ instance
# Format: amqp://[username:password@]host[:port]
RABBITMQ_URL=amqp://rabbitmq:5672
# Queue name for menu service events
RABBITMQ_QUEUE=menu_queue

# Service Configuration
# Name of the service for logging and identification
SERVICE_NAME=menu-service
# Log level (debug, info, warn, error)
LOG_LEVEL=info 